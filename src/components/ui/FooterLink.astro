---
interface Props {
  href: string;
  text: string;
  ariaLabel?: string;
}

const { href, text, ariaLabel } = Astro.props;
---

<a
  href={href}
  class="font-medium text-slate-400 transition-colors hover:text-teal-300 focus-visible:text-teal-300"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={ariaLabel}
>
  {text}</a
>
